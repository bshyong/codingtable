<h1>Listing languages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Category</th>
    <th>Abbreviation</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%= language.name %></td>
    <td><%= language.year %></td>
    <td><%= Category.find(language.category_id).name %></td>
    <td><%=  language.abbreviation %></td>
    <td><%= language.url %></td>
    <td><%= link_to 'Show', language %></td>
    <td><%= link_to 'Edit', edit_language_path(language) %></td>
    <td><%= link_to 'Destroy', language, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

